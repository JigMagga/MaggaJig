{
  "framework": "mocha",
  "serve_files": [ "test/browserified.js" ],
  "src_files": [
    "src/*",
    "test/setup.js",
    "test/*.test.js"
  ],
  "launchers": {
    "node": {
      "command": "./node_modules/.bin/mocha -r test/setup.js -R tap test/**/*.test.js",
      "protocol": "tap"
    }
  },
  "before_tests": "./node_modules/.bin/browserify test/tests.js -o test/browserified.js",
  "on_exit": "rm test/browserified.js",
  "launch_in_dev": [
    "node",
    "chrome"
  ]
}